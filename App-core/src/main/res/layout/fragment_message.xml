<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lll="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.lll.common.viewpager.tab.ViewPagerTabStrip
        android:id="@+id/vpt"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        lll:pstsDividerColor="@color/pager_tab_line"
        lll:pstsIndicatorColor="@color/pager_tab_title"
        lll:pstsTabBackground="@color/pager_tab_background"
        lll:pstsUnderlineColor="@color/pager_tab_line">

    </com.lll.common.viewpager.tab.ViewPagerTabStrip>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />


</LinearLayout>