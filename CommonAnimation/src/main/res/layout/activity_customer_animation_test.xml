<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/activity_customer_animation_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:context="com.lll.common.animation.activity.CustomerAnimationTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.lll.common.animation.timely.TimelyView
            android:id="@+id/timelyView11"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="17sp"
            app:text_color="#ffffff" />

        <TextView
            android:id="@+id/hour_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <com.lll.common.animation.timely.TimelyView
            android:id="@+id/timelyView12"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="17sp"
            app:text_color="#ffffff" />

        <com.lll.common.animation.timely.TimelyView
            android:id="@+id/timelyView13"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="17sp"
            app:text_color="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <com.lll.common.animation.timely.TimelyView
            android:id="@+id/timelyView14"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="17sp"
            app:text_color="#ffffff" />

        <com.lll.common.animation.timely.TimelyView
            android:id="@+id/timelyView15"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="17sp"
            app:text_color="#ffffff" />
    </LinearLayout>

</LinearLayout>
